# Description: Compression and decompression routines used by some programs
# URL:         
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  

name=zlib-ng
version=2.0.5
release=1
source=(https://lx4u.ru/downloads/packages/$name-$version.tar.gz)

build() {
        cd $name-$version

        ./configure --prefix=/usr --zlib-compat --native
        make
        make DESTDIR=$PKG install

        mkdir -p $PKG/lib
        mv -v $PKG/usr/lib/libz.so.* $PKG/lib
        ln -sfv ../../lib/$(readlink $PKG/usr/lib/libz.so) $PKG/usr/lib/libz.so
}
